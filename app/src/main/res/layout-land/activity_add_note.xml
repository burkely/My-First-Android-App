<!--Two attributes, android:layout_width and android:layout_height,
   are required for all views in order to specify their size. -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.35"

        >

        <EditText android:id="@+id/edit_message"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_message"

            android:layout_marginRight="@dimen/activity_land_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_land_horizontal_margin"
            android:layout_marginBottom="8dp"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"

            android:textSize="22sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.53"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_height="0dp"

            android:layout_width="fill_parent"
            android:layout_weight="0.40"

            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center"
            >

            <Button
                android:text="@string/button_save"
                android:onClick="saveMessage"

                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:paddingLeft="@dimen/activity_land_horizontal_margin"
                android:paddingRight="@dimen/activity_land_horizontal_margin"
                android:paddingTop="@dimen/activity_land_vertical_margin"
                android:paddingBottom="@dimen/activity_land_vertical_margin"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.40"

            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <Button
                android:text="@string/button_see_notes"
                android:onClick="seeNotes"

                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:paddingLeft="@dimen/activity_land_horizontal_margin"
                android:paddingRight="@dimen/activity_land_horizontal_margin"
                android:paddingTop="@dimen/activity_land_vertical_margin"
                android:paddingBottom="@dimen/activity_land_vertical_margin"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14
        "
        android:background="@color/bottomBar"
        >
    </LinearLayout>

</LinearLayout>