<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style
        name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here.-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="colorAccent">@color/app_blue</item>

    </style>

    <!-- ActionBar styles-->
    <style
        name="MyActionBar"
        parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/app_blue</item>

        <!-- Support library compatibility -->
        <item name="background">@color/app_blue</item>
        <item name="android:minWidth">0dp</item>

        <!--Using build tool 21.1.2, it doesn't allow giving color directly to themes.
        You have to give it using @color or @drawable.-->
    </style>


</resources>
